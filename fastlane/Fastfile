update_fastlane
default_platform :ios

platform :ios do
  # before_all do
  #   cocoapods
  # end

  desc "Runs all the tests"
  lane :test do

  end
  
  desc "Certs"
  lane :certificates do
    match(type: "appstore")
    match(type: "development")
  end
  
  lane :register_test_devices do
    register_devices(
      devices: {
        "iPhone X" => "9db4805265d01046d7303a6e70d03e223456b9a7"
      }
    )
  end
  
  desc "CI build"
  lane :ci_build do
    # certificates
    
    # Test
    scan(
      workspace: "Dodies.lv.xcworkspace",
			scheme: "Dodies.lv",
			clean: true,
      devices: ["iPhone X", "iPad (5th generation)"]
    ) 
  end
  
  desc "Circle CI lane"
  lane :circleci do
    setup_circle_ci
    ci_build
  end

  desc "Travis lane"
  lane :travis do
    setup_travis
    ci_build
  end

  lane :release do
    increment_build_number build_number: get_version_number + "." + Time.new.strftime("%y%m%d.%H%M")

    clear_derived_data

    gym(
      workspace: "Dodies.lv.xcworkspace",
      scheme: "Dodies.lv",
      clean: true,
      output_name: "Dodies.lv.ipa",
      include_symbols: true
    )
    
    testflight(
      skip_waiting_for_build_processing: true
    )
  end

  error do |lane, exception|

  end
end
